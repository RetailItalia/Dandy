<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>RetailItalia srl</Authors>
    <PackageIconUrl>http://www.retailitaliasrl.it/wp-content/uploads/favicon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/RetailItalia/Dandy</RepositoryUrl>
    <PackageProjectUrl>https://github.com/RetailItalia/Dandy</PackageProjectUrl>
    <Description>Handy Dapper extension to work with DB2.
This package provides an enhancement of the Dapper.Contrib's features and some basic query extra-functionalities</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Readme.html" />
    <None Remove="readme.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Readme.html">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="readme.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="1.60.1" />
    <PackageReference Include="Dapper.SqlBuilder" Version="1.60.1" />
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
  </ItemGroup>

</Project>
